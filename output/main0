#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

int main() {
    char buscaNOC[10]; // armazena o país digitado pelo usuário
    printf("Digite o NOC (ex: BRA, USA): "); // pergunta o NOC do país 
    scanf("%s", buscaNOC); // usuário digita o NOC do país

    for(int i = 0; buscaNOC[i]; i++) buscaNOC[i] = toupper(buscaNOC[i]); // converte o texto digitado para maiúsculas 

    FILE *arquivo = fopen("results.csv", "r"); // abre o aqrquivo no modo leitura 
    if (!arquivo) {
        printf("Erro: Arquivo results.csv nao encontrado!\n");
        return 1;
    }

    char linha[2048];
    int PrimeiraMedalha = 0; // contador para a primeira medalha

    // Pula a primeira linha de títulos do arquivo
    fgets(linha, sizeof(linha), arquivo);

    while (fgets(linha, sizeof(linha), arquivo)) { // percorre o arquivo linha por linha 
        
        if (strstr(linha, buscaNOC) != NULL) { // procura se o NOC do país está na linha 
            
            // verifica se tem medalha 
            if (strstr(linha, "Gold") || strstr(linha, "Silver") || strstr(linha, "Bronze")) { 
                
                PrimeiraMedalha++; // quando encontra a primeira medalha do pais, ele soma um ao contador

                if (PrimeiraMedalha == 1) { // quando o contador somar um
                    // ele para de procurar e bota a medalha e ano que achou
                    printf("\n--- PRIMEIRA MEDALHA ENCONTRADA PARA %s ---\n", buscaNOC);
                    printf("Dados: %s", linha); 
                    break; // para de procurar imediatamente
                }
            }
        }
    } // Fim do while

    if (PrimeiraMedalha == 0) {
        printf("\nNenhuma medalha encontrada para %s.\n", buscaNOC);
    }

    fclose(arquivo);
    return 0;
}
